<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picture13">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="279dp"
        android:layout_height="205dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/tara_no_ate11" />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/reservation_shape"
        android:hint="@string/confirmation1"
        android:inputType="textCapWords"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/name_field2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/reservation_shape"
        android:hint="@string/confirmation2"
        android:inputType="textCapWords"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/name_field3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/reservation_shape"
        android:hint="@string/confirmation3"
        android:inputType="textCapWords"
        android:padding="8dp"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/reservation_shape"
        android:onClick="confirm"
        android:text="@string/confirmation4"/>
        
        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:alpha="0.8"
            android:background="@drawable/reservation_shape"
            android:padding="8dp"
            android:text="@string/summary"/>
    </LinearLayout>

</RelativeLayout>

</ScrollView>